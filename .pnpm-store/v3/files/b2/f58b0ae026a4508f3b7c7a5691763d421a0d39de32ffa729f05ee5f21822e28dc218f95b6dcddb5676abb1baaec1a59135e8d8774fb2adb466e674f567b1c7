            date = new Date(2021, 11, 27);
            expect((0, dateUtils_1.getIsLastRow)(date, constants_1.WeekDay.Sunday)).toBe(true);
            date = new Date(2021, 11, 28);
            expect((0, dateUtils_1.getIsLastRow)(date, constants_1.WeekDay.Sunday)).toBe(true);
            date = new Date(2021, 11, 29);
            expect((0, dateUtils_1.getIsLastRow)(date, constants_1.WeekDay.Sunday)).toBe(true);
            date = new Date(2021, 11, 30);
            expect((0, dateUtils_1.getIsLastRow)(date, constants_1.WeekDay.Sunday)).toBe(true);
            date = new Date(2021, 11, 31);
            expect((0, dateUtils_1.getIsLastRow)(date, constants_1.WeekDay.Sunday)).toBe(true);
        });
